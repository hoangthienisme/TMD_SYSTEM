@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TMD System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #ff6b6b;
            --primary-dark: #ff5252;
            --secondary: #ffd93d;
            --success: #51cf66;
            --danger: #ff6b6b;
            --dark: #2d3436;
            --light-bg: #f5f7fa;
            --white: #ffffff;
            --text-muted: #868e96;
            --gray-100: #f1f3f5;
            --gray-200: #e9ecef;
            --gray-300: #dee2e6;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--light-bg);
            min-height: 100vh;
            display: flex;
            align-items: center;
            overflow-x: hidden;
        }

        .forgot-container {
            max-width: 480px;
            margin: 50px auto;
            width: 100%;
            padding: 0 20px;
        }

        .forgot-card {
            background: var(--white);
            border-radius: 20px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            overflow: hidden;
            border: 1px solid var(--gray-200);
            animation: fadeIn 0.5s ease-out;
        }

        keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .card-header {
            background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
            color: white;
            padding: 40px 30px;
            text-align: center;
            border-bottom: none;
        }

            .card-header i {
                font-size: 56px;
                margin-bottom: 16px;
                opacity: 0.95;
            }

            .card-header h3 {
                margin: 0 0 8px 0;
                font-weight: 700;
                font-size: 24px;
                letter-spacing: -0.5px;
            }

            .card-header p {
                margin: 0;
                font-size: 14px;
                opacity: 0.9;
                font-weight: 400;
            }

        .card-body {
            padding: 40px 35px;
        }

        .form-label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 10px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .form-label i {
                font-size: 16px;
                color: var(--primary);
            }

        .form-control {
            border: 2px solid var(--gray-200);
            border-radius: 12px;
            padding: 14px 18px;
            font-size: 15px;
            transition: all 0.25s ease;
            background: var(--white);
            font-family: 'Inter', 'Segoe UI', sans-serif;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(255, 107, 107, 0.1);
                outline: none;
                background: var(--white);
            }

            .form-control::placeholder {
                color: var(--text-muted);
                opacity: 0.7;
            }

        .btn-primary {
            background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
            border: none;
            border-radius: 12px;
            padding: 14px 24px;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.25s ease;
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(255, 107, 107, 0.4);
                background: linear-gradient(135deg, #ff5252 0%, #ff6b6b 100%);
            }

            .btn-primary:active {
                transform: translateY(0);
            }

            .btn-primary:disabled {
                opacity: 0.7;
                cursor: not-allowed;
                transform: none;
            }

        .btn-back {
            color: var(--primary);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
            padding: 8px 12px;
            border-radius: 8px;
        }

            .btn-back:hover {
                background: rgba(255, 107, 107, 0.08);
                gap: 10px;
                color: var(--primary-dark);
            }

            .btn-back i {
                transition: transform 0.2s ease;
            }

            .btn-back:hover i {
                transform: translateX(-2px);
            }

        .info-box {
            background: #fff5f5;
            border-left: 4px solid var(--primary);
            padding: 16px 18px;
            border-radius: 12px;
            margin-bottom: 24px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
            box-shadow: 0 2px 8px rgba(255, 107, 107, 0.08);
        }

            .info-box i {
                color: var(--primary);
                font-size: 18px;
                margin-top: 2px;
                flex-shrink: 0;
            }

            .info-box small {
                color: var(--dark);
                line-height: 1.6;
                font-size: 13px;
            }

        /* Loading spinner animation */
        .fa-spinner {
            animation: spin 1s linear infinite;
        }

        keyframes spin {
            from

        {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }

        }

        /* Responsive */
        media (max-width: 576px) {
            .forgot-container

        {
            margin: 30px auto;
            padding: 0 16px;
        }

        .card-header {
            padding: 32px 24px;
        }

            .card-header i {
                font-size: 48px;
            }

            .card-header h3 {
                font-size: 22px;
            }

        .card-body {
            padding: 32px 24px;
        }

        .form-control {
            padding: 12px 16px;
            font-size: 14px;
        }

        .btn-primary {
            padding: 12px 20px;
            font-size: 15px;
        }

        }

        /* SweetAlert2 custom styling to match theme */
        .swal2-popup {
            border-radius: 16px !important;
            font-family: 'Inter', 'Segoe UI', sans-serif !important;
        }

        .swal2-title {
            font-weight: 700 !important;
            font-size: 22px !important;
        }

        .swal2-confirm {
            background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%) !important;
            border-radius: 10px !important;
            padding: 10px 28px !important;
            font-weight: 600 !important;
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3) !important;
        }

            .swal2-confirm:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(255, 107, 107, 0.4) !important;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="forgot-container">
            <div class="forgot-card">
                <div class="card-header">
                    <i class="fas fa-key"></i>
                    <h3>Quên Mật Khẩu</h3>
                    <p>Nhập email để nhận mã OTP</p>
                </div>
                <div class="card-body">
                    <div class="info-box">
                        <i class="fas fa-info-circle"></i>
                        <small>
                            Chúng tôi sẽ gửi mã OTP (6 số) đến email của bạn.
                            Mã có hiệu lực trong 5 phút.
                        </small>
                    </div>

                    <form id="forgotPasswordForm">
                        <div class="mb-4">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope"></i>
                                Email
                            </label>
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   name="email"
                                   placeholder="example@email.com"
                                   required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3" id="btnSendOtp">
                            <i class="fas fa-paper-plane"></i>
                            Gửi Mã OTP
                        </button>

                        <div class="text-center">
                            <a href="/Account/Login" class="btn-back">
                                <i class="fas fa-arrow-left"></i>
                                Quay lại đăng nhập
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const email = document.getElementById('email').value;
            const btn = document.getElementById('btnSendOtp');
            const originalText = btn.innerHTML;

            // Disable button
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>Đang gửi...';

            try {
                const response = await fetch('/Account/SendOtpJson', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email: email })
                });

                const result = await response.json();

                if (result.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: result.message,
                        confirmButtonColor: '#ff6b6b',
                        timer: 2000
                    });

                    // Chuyển đến trang nhập OTP
                    window.location.href = `/Account/VerifyOtp?email=${encodeURIComponent(email)}`;
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: result.message,
                        confirmButtonColor: '#ff6b6b'
                    });

                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: 'Có lỗi xảy ra. Vui lòng thử lại',
                    confirmButtonColor: '#ff6b6b'
                });

                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });
    </script>
</body>
</html>