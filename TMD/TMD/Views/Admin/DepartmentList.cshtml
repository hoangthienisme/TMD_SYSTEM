@model List<TMD.Models.Department>
@{
    ViewData["Title"] = "Quản lý phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/departmen-list.css" rel="stylesheet" />

<!-- ✅ CSS CHO MODAL - KHÔNG DÙNG BOOTSTRAP -->
<style>
    /* ===== MODAL OVERLAY ===== */
    .tm-modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        z-index: 9998;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

        .tm-modal-overlay.active {
            display: flex;
            opacity: 1;
            align-items: center;
            justify-content: center;
        }

    /* ===== MODAL CONTAINER ===== */
    .tm-modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0.9);
        width: 90%;
        max-width: 600px;
        background: var(--tm-white);
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        z-index: 9999;
        opacity: 0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .tm-modal.active {
            display: block;
            opacity: 1;
            transform: translate(-50%, -50%) scale(1);
        }

    .tm-modal-header {
        background: linear-gradient(135deg, var(--tm-primary) 0%, var(--tm-primary-dark) 100%);
        padding: 1.5rem;
        border-radius: 16px 16px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .tm-modal-title {
        color: var(--tm-white);
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .tm-btn-close {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: var(--tm-white);
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .tm-btn-close:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(90deg);
        }

    .tm-modal-body {
        padding: 2rem;
        max-height: 70vh;
        overflow-y: auto;
    }

        /* Custom scrollbar */
        .tm-modal-body::-webkit-scrollbar {
            width: 8px;
        }

        .tm-modal-body::-webkit-scrollbar-track {
            background: var(--tm-gray-100);
            border-radius: 10px;
        }

        .tm-modal-body::-webkit-scrollbar-thumb {
            background: var(--tm-gray-400);
            border-radius: 10px;
        }

    .tm-form-group {
        margin-bottom: 1.5rem;
    }

    .tm-form-label {
        display: block;
        font-weight: 600;
        color: var(--tm-dark);
        margin-bottom: 0.5rem;
        font-size: 0.9375rem;
    }

    .tm-text-danger {
        color: var(--tm-danger);
    }

    .tm-form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid var(--tm-gray-300);
        border-radius: 10px;
        font-size: 0.9375rem;
        transition: all 0.3s ease;
        font-family: inherit;
    }

        .tm-form-control:focus {
            outline: none;
            border-color: var(--tm-primary);
            box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.1);
        }

    textarea.tm-form-control {
        resize: vertical;
        min-height: 100px;
    }

    /* Custom Checkbox */
    .tm-checkbox-wrapper {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        cursor: pointer;
    }

        .tm-checkbox-wrapper input[type="checkbox"] {
            width: 20px;
            height: 20px;
            cursor: pointer;
            accent-color: var(--tm-success);
        }

    .tm-checkbox-label {
        font-size: 0.9375rem;
        color: var(--tm-dark);
        cursor: pointer;
        user-select: none;
    }

    /* Buttons */
    .tm-btn-group {
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
        margin-top: 1.5rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9375rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-secondary {
        background: var(--tm-gray-400);
        color: var(--tm-white);
    }

        .btn-secondary:hover {
            background: var(--tm-gray-500);
            transform: translateY(-2px);
        }

    .btn-primary {
        background: var(--tm-primary);
        color: var(--tm-white);
    }

        .btn-primary:hover {
            background: var(--tm-primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
        }

        .btn-primary:disabled {
            background: var(--tm-gray-400);
            cursor: not-allowed;
            transform: none;
        }

    /* SweetAlert2 Custom */
    .swal-custom-popup {
        border-radius: 16px;
    }

    .swal-custom-title {
        color: var(--tm-dark);
        font-weight: 700;
    }

    .swal-custom-html {
        color: var(--tm-text-muted);
    }

    .swal-custom-confirm,
    .swal-custom-cancel {
        border-radius: 10px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
    }
</style>

<div class="container-fluid px-4 py-4 tm-container">
    <!-- Header Section -->
    <div class="tm-page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="tm-page-title">
                    <i class="fas fa-building me-2"></i> Quản lý phòng ban
                </h1>
                <p class="tm-page-subtitle">Danh sách các phòng ban trong hệ thống</p>
            </div>
            <button class="btn btn-primary tm-btn-create" onclick="addDepartment()">
                <i class="fas fa-plus me-2"></i> Thêm phòng ban
            </button>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-4 col-md-6">
            <div class="tm-stats-card tm-stats-primary">
                <div class="tm-stats-icon">
                    <i class="fas fa-building"></i>
                </div>
                <div class="tm-stats-content">
                    <div class="tm-stats-label">Tổng phòng ban</div>
                    <div class="tm-stats-value">@Model.Count</div>
                </div>
                <div class="tm-stats-trend">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="tm-stats-card tm-stats-success">
                <div class="tm-stats-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="tm-stats-content">
                    <div class="tm-stats-label">Tổng nhân viên</div>
                    <div class="tm-stats-value">@Model.Sum(d => d.Users?.Count ?? 0)</div>
                </div>
                <div class="tm-stats-trend">
                    <i class="fas fa-arrow-up"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="tm-stats-card tm-stats-info">
                <div class="tm-stats-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div class="tm-stats-content">
                    <div class="tm-stats-label">Trung bình/phòng</div>
                    <div class="tm-stats-value">@(Model.Count > 0 ? Math.Round((double)Model.Sum(d => d.Users?.Count ?? 0) / Model.Count, 1) : 0)</div>
                </div>
                <div class="tm-stats-trend">
                    <i class="fas fa-calculator"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Department Cards -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var dept in Model)
            {
                <div class="col-xl-4 col-lg-6 col-md-6">
                    <div class="tm-dept-card">
                        <div class="tm-dept-card__header">
                            <div class="tm-dept-card__icon">
                                <i class="fas fa-building"></i>
                            </div>
                            <div class="tm-dept-card__actions">
                                <a asp-action="DepartmentDetail" asp-route-id="@dept.DepartmentId" class="tm-btn-icon tm-btn-icon--info" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <button class="tm-btn-icon tm-btn-icon--primary" onclick="editDepartment(@dept.DepartmentId, '@dept.DepartmentName', '@Html.Raw(dept.Description?.Replace("'", "\\'") ?? "")', @dept.IsActive.ToString().ToLower())" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </button>
                                @if (dept.IsActive == true)
                                {
                                    <button class="tm-btn-icon tm-btn-icon--danger" onclick="toggleDepartmentStatus(@dept.DepartmentId, '@Html.Raw(dept.DepartmentName.Replace("'", "\\'"))')" title="Vô hiệu hóa">
                                        <i class="fas fa-ban"></i>
                                    </button>
                                }
                                else
                                {
                                    <button class="tm-btn-icon tm-btn-icon--success" onclick="toggleDepartmentStatus(@dept.DepartmentId, '@Html.Raw(dept.DepartmentName.Replace("'", "\\'"))')" title="Kích hoạt">
                                        <i class="fas fa-check"></i>
                                    </button>
                                }
                            </div>
                        </div>

                        <div class="tm-dept-card__body">
                            <h4 class="tm-dept-card__name">@dept.DepartmentName</h4>

                            <div class="tm-dept-card__stats">
                                <div class="tm-stat-badge">
                                    <i class="fas fa-users me-1"></i>
                                    <span>@(dept.Users?.Count ?? 0) nhân viên</span>
                                </div>
                                @if (dept.IsActive == true)
                                {
                                    <span class="tm-badge tm-badge-success">
                                        <i class="fas fa-check-circle me-1"></i> Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="tm-badge tm-badge-secondary">
                                        <i class="fas fa-ban me-1"></i> Không hoạt động
                                    </span>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(dept.Description))
                            {
                                <p class="tm-dept-card__desc">@dept.Description</p>
                            }

                            @if (dept.Users != null && dept.Users.Any())
                            {
                                <div class="tm-dept-card__members">
                                    <p class="tm-members-title">
                                        <i class="fas fa-users me-1"></i> Thành viên:
                                    </p>
                                    <div class="tm-member-avatars">
                                        @foreach (var user in dept.Users.Take(5))
                                        {
                                            <div class="tm-member-avatar" title="@user.FullName">
                                                @if (!string.IsNullOrEmpty(user.Avatar))
                                                {
                                                    <img src="@user.Avatar" alt="@user.FullName" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                                    <span style="display:none;">@user.FullName?.Substring(0, 1)</span>
                                                }
                                                else
                                                {
                                                    <span>@user.FullName?.Substring(0, 1)</span>
                                                }
                                            </div>
                                        }
                                        @if (dept.Users.Count > 5)
                                        {
                                            <div class="tm-member-avatar tm-member-avatar--more">
                                                +@(dept.Users.Count - 5)
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="tm-dept-card__footer">
                            <small class="tm-text-muted">
                                <i class="far fa-calendar me-1"></i>
                                Tạo: @(dept.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="tm-empty-state">
            <i class="fas fa-building fa-3x"></i>
            <h4>Chưa có phòng ban nào</h4>
            <p>Nhấn nút "Thêm phòng ban" để tạo phòng ban mới</p>
        </div>
    }
</div>

<!-- ✅ MODAL - VANILLA JS (NO BOOTSTRAP) -->
<div class="tm-modal-overlay" id="modalOverlay" onclick="closeModal()"></div>
<div class="tm-modal" id="departmentModal">
    <div class="tm-modal-header">
        <h5 class="tm-modal-title" id="modalTitle">
            <i class="fas fa-building me-2"></i> Thêm phòng ban
        </h5>
        <button type="button" class="tm-btn-close" onclick="closeModal()">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <div class="tm-modal-body">
        <form id="departmentForm" onsubmit="handleSubmit(event)">
            <input type="hidden" id="departmentId" value="0">

            <div class="tm-form-group">
                <label for="departmentName" class="tm-form-label">
                    Tên phòng ban <span class="tm-text-danger">*</span>
                </label>
                <input type="text" class="tm-form-control" id="departmentName"
                       placeholder="Nhập tên phòng ban..." required>
            </div>

            <div class="tm-form-group">
                <label for="departmentDescription" class="tm-form-label">Mô tả</label>
                <textarea class="tm-form-control" id="departmentDescription" rows="4"
                          placeholder="Mô tả về phòng ban..."></textarea>
            </div>

            <div class="tm-form-group">
                <label class="tm-checkbox-wrapper">
                    <input type="checkbox" id="departmentIsActive" checked>
                    <span class="tm-checkbox-label">
                        <i class="fas fa-check-circle me-1"></i> Kích hoạt phòng ban
                    </span>
                </label>
            </div>

            <div class="tm-divider"></div>

            <div class="tm-btn-group">
                <button type="button" class="btn btn-secondary" onclick="closeModal()">
                    <i class="fas fa-times"></i> Hủy
                </button>
                <button type="submit" class="btn btn-primary" id="btnSaveDepartment">
                    <i class="fas fa-save"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // ✅ MODAL FUNCTIONS - VANILLA JS
        function openModal() {
            document.getElementById('modalOverlay').classList.add('active');
            document.getElementById('departmentModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('modalOverlay').classList.remove('active');
            document.getElementById('departmentModal').classList.remove('active');
            document.body.style.overflow = '';
        }

        // ESC key to close
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });

        // ✅ TOAST NOTIFICATION
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `tm-toast tm-toast-${type}`;
            toast.innerHTML = `
                <div class="tm-toast-content">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-circle' : 'info-circle'} tm-toast-icon"></i>
                    <span class="tm-toast-message">${message}</span>
                    <button class="tm-toast-close" onclick="this.parentElement.parentElement.remove()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            document.body.appendChild(toast);
            setTimeout(() => toast.classList.add('show'), 10);
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        }

        // ✅ THÊM PHÒNG BAN
        function addDepartment() {
            document.getElementById('modalTitle').innerHTML = '<i class="fas fa-plus me-2"></i> Thêm phòng ban';
            document.getElementById('departmentId').value = '0';
            document.getElementById('departmentName').value = '';
            document.getElementById('departmentDescription').value = '';
            document.getElementById('departmentIsActive').checked = true;
            openModal();
        }

        // ✅ CHỈNH SỬA PHÒNG BAN
        function editDepartment(id, name, description, isActive) {
            document.getElementById('modalTitle').innerHTML = '<i class="fas fa-edit me-2"></i> Chỉnh sửa phòng ban';
            document.getElementById('departmentId').value = id;
            document.getElementById('departmentName').value = name;
            document.getElementById('departmentDescription').value = description || '';
            document.getElementById('departmentIsActive').checked = isActive;
            openModal();
        }

        // ✅ TOGGLE STATUS
        function toggleDepartmentStatus(id, name) {
            Swal.fire({
                title: 'Xác nhận thay đổi',
                html: `Bạn có chắc muốn thay đổi trạng thái phòng ban<br><strong>"${name}"</strong>?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#E74C3C',
                cancelButtonColor: '#95A5A6',
                confirmButtonText: '<i class="fas fa-check me-2"></i>Xác nhận',
                cancelButtonText: '<i class="fas fa-times me-2"></i>Hủy',
                customClass: {
                    popup: 'swal-custom-popup',
                    title: 'swal-custom-title',
                    htmlContainer: 'swal-custom-html',
                    confirmButton: 'swal-custom-confirm',
                    cancelButton: 'swal-custom-cancel'
                },
                showLoaderOnConfirm: true,
                preConfirm: async () => {
                    try {
                        const response = await fetch('/Admin/ToggleDepartmentStatus', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ departmentId: parseInt(id) })
                        });

                        const data = await response.json();

                        if (!data.success) {
                            throw new Error(data.message || 'Có lỗi xảy ra');
                        }

                        return data;
                    } catch (error) {
                        Swal.showValidationMessage(`Lỗi: ${error.message}`);
                    }
                },
                allowOutsideClick: () => !Swal.isLoading()
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Thành công!',
                        text: result.value.message,
                        icon: 'success',
                        confirmButtonColor: '#27AE60',
                        confirmButtonText: '<i class="fas fa-check me-2"></i>OK',
                        customClass: {
                            popup: 'swal-custom-popup',
                            title: 'swal-custom-title',
                            confirmButton: 'swal-custom-confirm'
                        }
                    }).then(() => {
                        location.reload();
                    });
                }
            });
        }

        // ✅ FORM SUBMIT
        async function handleSubmit(e) {
            e.preventDefault();

            const departmentId = parseInt(document.getElementById('departmentId').value);
            const departmentName = document.getElementById('departmentName').value.trim();
            const description = document.getElementById('departmentDescription').value.trim();
            const isActive = document.getElementById('departmentIsActive').checked;
            const btnSave = document.getElementById('btnSaveDepartment');

            if (!departmentName) {
                Swal.fire({
                    title: 'Lỗi!',
                    text: 'Vui lòng nhập tên phòng ban!',
                    icon: 'error',
                    confirmButtonColor: '#E74C3C',
                    confirmButtonText: '<i class="fas fa-times me-2"></i>Đóng',
                    customClass: {
                        popup: 'swal-custom-popup',
                        title: 'swal-custom-title',
                        confirmButton: 'swal-custom-confirm'
                    }
                });
                return;
            }

            btnSave.disabled = true;
            btnSave.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang xử lý...';

            const url = departmentId > 0
                ? '/Admin/UpdateDepartment'
                : '/Admin/CreateDepartment';

            const data = departmentId > 0
                ? { departmentId, departmentName, description, isActive }
                : { departmentName, description, isActive };

            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    closeModal();

                    Swal.fire({
                        title: 'Thành công!',
                        text: result.message,
                        icon: 'success',
                        confirmButtonColor: '#27AE60',
                        confirmButtonText: '<i class="fas fa-check me-2"></i>OK',
                        customClass: {
                            popup: 'swal-custom-popup',
                            title: 'swal-custom-title',
                            confirmButton: 'swal-custom-confirm'
                        }
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Lỗi!',
                        text: result.message,
                        icon: 'error',
                        confirmButtonColor: '#E74C3C',
                        confirmButtonText: '<i class="fas fa-times me-2"></i>Đóng',
                        customClass: {
                            popup: 'swal-custom-popup',
                            title: 'swal-custom-title',
                            confirmButton: 'swal-custom-confirm'
                        }
                    });

                    btnSave.disabled = false;
                    btnSave.innerHTML = '<i class="fas fa-save"></i> ' + (departmentId > 0 ? 'Cập nhật' : 'Lưu');
                }
            } catch (error) {
                Swal.fire({
                    title: 'Lỗi!',
                    text: 'Có lỗi xảy ra khi kết nối đến server!',
                    icon: 'error',
                    confirmButtonColor: '#E74C3C',
                    confirmButtonText: '<i class="fas fa-times me-2"></i>Đóng',
                    customClass: {
                        popup: 'swal-custom-popup',
                        title: 'swal-custom-title',
                        confirmButton: 'swal-custom-confirm'
                    }
                });

                btnSave.disabled = false;
                btnSave.innerHTML = '<i class="fas fa-save"></i> ' + (departmentId > 0 ? 'Cập nhật' : 'Lưu');
            }
        }
    </script>
}