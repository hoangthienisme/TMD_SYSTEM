@model List<TMD.Models.LoginHistory>
@{
    ViewData["Title"] = "Lịch sử đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/loginhistory.css" rel="stylesheet" />
<link href="~/css/tasklist-ad.css" rel="stylesheet" />

<style>
    :root {
        --primary: #ff6b6b;
        --primary-dark: #ff5252;
        --secondary: #ffd93d;
        --success: #51cf66;
        --info: #74c0fc;
        --warning: #ffd93d;
        --danger: #ff6b6b;
        --dark: #2d3436;
        --light-bg: #f5f7fa;
        --white: #ffffff;
        --text-muted: #868e96;
        --gray-100: #f1f3f5;
        --gray-200: #e9ecef;
        --gray-300: #dee2e6;
    }

    .tm-page-header {
        margin-bottom: 32px;
    }

    .tm-page-title {
        font-size: 28px;
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 8px;
    }

    .tm-page-subtitle {
        font-size: 14px;
        color: var(--text-muted);
        margin: 0;
    }

    .tm-btn-back {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Stats Cards */
    .tm-stats-card {
        background: var(--white);
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--gray-200);
        transition: all 0.3s ease;
        display: flex;
        align-items: flex-start;
        gap: 16px;
    }

        .tm-stats-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        }

    .tm-stats-icon {
        width: 56px;
        height: 56px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        flex-shrink: 0;
    }

    .tm-stats-primary .tm-stats-icon {
        background: rgba(255, 107, 107, 0.1);
        color: var(--primary);
    }

    .tm-stats-success .tm-stats-icon {
        background: rgba(81, 207, 102, 0.1);
        color: var(--success);
    }

    .tm-stats-danger .tm-stats-icon {
        background: rgba(255, 107, 107, 0.1);
        color: var(--danger);
    }

    .tm-stats-content {
        flex: 1;
    }

    .tm-stats-label {
        font-size: 13px;
        color: var(--text-muted);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .tm-stats-value {
        font-size: 32px;
        font-weight: 700;
        color: var(--dark);
    }

    .tm-stats-trend {
        margin-left: auto;
        font-size: 24px;
        opacity: 0.3;
        align-self: center;
    }

    /* Card */
    .tm-card {
        background: var(--white);
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--gray-200);
        overflow: hidden;
    }

    .tm-login-filters-header {
        padding: 20px 24px;
        border-bottom: 1px solid var(--gray-200);
    }

        .tm-login-filters-header h6 {
            margin: 0;
            font-size: 16px;
            font-weight: 600;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .tm-card-body {
        padding: 24px;
    }

    .tm-card-header {
        padding: 20px 24px;
        border-bottom: 1px solid var(--gray-200);
    }

        .tm-card-header h5 {
            margin: 0;
            font-size: 16px;
            font-weight: 600;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .tm-card-body-table {
        padding: 0;
        overflow-x: auto;
    }

    .tm-form-label {
        font-size: 13px;
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
    }

    .tm-form-control {
        padding: 10px 12px;
        border: 1px solid var(--gray-200);
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.2s ease;
        font-family: inherit;
    }

        .tm-form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.1);
        }

    .tm-btn-create {
        background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .tm-btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
        }

    /* Table */
    .tm-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
    }

        .tm-table thead {
            background: var(--gray-100);
        }

        .tm-table th {
            padding: 12px 16px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid var(--gray-200);
        }

        .tm-table td {
            padding: 16px;
            border-bottom: 1px solid var(--gray-200);
            font-size: 14px;
            color: var(--dark);
        }

        .tm-table tbody tr {
            transition: all 0.2s ease;
        }

            .tm-table tbody tr:hover {
                background: var(--gray-100);
            }

            .tm-table tbody tr.tm-login-row-failed {
                background: rgba(255, 107, 107, 0.03);
            }

    /* Login Timestamp */
    .tm-login-timestamp {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .tm-login-timestamp i {
            font-size: 18px;
            flex-shrink: 0;
        }

        .tm-login-timestamp div {
            line-height: 1.4;
        }

    /* User Info */
    .tm-login-user-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .tm-login-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff6b6b, #ff8787);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 16px;
        border: 2px solid white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        flex-shrink: 0;
        overflow: hidden;
    }

        .tm-login-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        .tm-login-avatar span {
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .tm-login-user-name {
        font-weight: 600;
        color: var(--dark);
    }

    .tm-login-user-invalid {
        display: flex;
        align-items: center;
        gap: 10px;
        color: var(--danger);
    }

    /* Badges */
    .tm-login-ip-badge,
    .tm-login-browser-badge,
    .tm-login-device-badge,
    .tm-login-duration-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        background: var(--gray-100);
        color: var(--text-muted);
    }

    .tm-login-device-badge--mobile {
        background: rgba(116, 192, 252, 0.1);
        color: var(--info);
    }

    .tm-login-device-badge--tablet {
        background: rgba(255, 215, 61, 0.1);
        color: var(--warning);
    }

    .tm-login-device-badge--desktop {
        background: rgba(81, 207, 102, 0.1);
        color: var(--success);
    }

    .tm-login-device-badge--unknown {
        background: var(--gray-100);
        color: var(--text-muted);
    }

    .tm-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
    }

    .tm-badge-success {
        background: rgba(81, 207, 102, 0.1);
        color: var(--success);
    }

    .tm-badge-danger {
        background: rgba(255, 107, 107, 0.1);
        color: var(--danger);
    }

    .tm-badge-warning {
        background: rgba(255, 215, 61, 0.1);
        color: var(--warning);
    }

    .tm-login-status-failed {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .tm-login-fail-reason {
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 12px;
        color: var(--danger);
        background: rgba(255, 107, 107, 0.05);
        padding: 6px 10px;
        border-radius: 6px;
    }

    /* Empty State */
    .tm-empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--text-muted);
    }

        .tm-empty-state i {
            color: var(--gray-300);
        }

        .tm-empty-state h4 {
            color: var(--dark);
            margin-top: 16px;
        }

    .tm-text-muted {
        color: var(--text-muted);
    }

    /* Responsive */
    media (max-width: 768px) {
        .tm-page-title

    {
        font-size: 24px;
    }

    .tm-stats-value {
        font-size: 24px;
    }

    .tm-table th,
    .tm-table td {
        padding: 10px 12px;
        font-size: 12px;
    }

    .tm-login-avatar {
        width: 40px;
        height: 40px;
        font-size: 14px;
    }

    }
</style>

<div class="tm-container">
    <!-- PAGE HEADER -->
    <div class="tm-page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="tm-page-title">
                    <i class="fas fa-history me-2"></i> Lịch sử đăng nhập
                </h2>
                <p class="tm-page-subtitle">Theo dõi tất cả hoạt động đăng nhập của hệ thống</p>
            </div>
            <a href="@Url.Action("Dashboard", "Admin")" class="tm-btn-back btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- STATISTICS CARDS -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="tm-stats-card tm-stats-primary">
                <div class="tm-stats-icon">
                    <i class="fas fa-list"></i>
                </div>
                <div class="tm-stats-content">
                    <div class="tm-stats-label">Tổng lượt đăng nhập</div>
                    <div class="tm-stats-value">@Model.Count</div>
                </div>
                <div class="tm-stats-trend">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="tm-stats-card tm-stats-success">
                <div class="tm-stats-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="tm-stats-content">
                    <div class="tm-stats-label">Thành công</div>
                    <div class="tm-stats-value">@Model.Count(l => l.IsSuccess == true)</div>
                </div>
                <div class="tm-stats-trend">
                    <i class="fas fa-shield-check"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="tm-stats-card tm-stats-danger">
                <div class="tm-stats-icon">
                    <i class="fas fa-times-circle"></i>
                </div>
                <div class="tm-stats-content">
                    <div class="tm-stats-label">Thất bại</div>
                    <div class="tm-stats-value">@Model.Count(l => l.IsSuccess == false)</div>
                </div>
                <div class="tm-stats-trend">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- FILTERS -->
    <div class="tm-card mb-4">
        <div class="tm-login-filters-header">
            <h6>
                <i class="fas fa-filter me-2"></i> Bộ lọc
            </h6>
        </div>
        <div class="tm-card-body">
            <form method="get" action="/Admin/LoginHistory">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="tm-form-label">
                            <i class="far fa-calendar-alt me-1"></i> Từ ngày
                        </label>
                        <input type="date" name="fromDate" class="tm-form-control" value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="tm-form-label">
                            <i class="far fa-calendar-alt me-1"></i> Đến ngày
                        </label>
                        <input type="date" name="toDate" class="tm-form-control" value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="tm-form-label">
                            <i class="fas fa-toggle-on me-1"></i> Trạng thái
                        </label>
                        <select name="isSuccess" class="tm-form-control">
                            <option value="">Tất cả</option>
                            <option value="true" selected="@(ViewBag.IsSuccess == true)">Thành công</option>
                            <option value="false" selected="@(ViewBag.IsSuccess == false)">Thất bại</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end gap-2">
                        <button type="submit" class="tm-btn-create btn btn-primary flex-fill">
                            <i class="fas fa-search me-1"></i> Lọc
                        </button>
                        <a href="/Admin/LoginHistory" class="btn btn-outline-secondary" title="Reset bộ lọc">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- LOGIN HISTORY TABLE -->
    <div class="tm-card">
        <div class="tm-card-header">
            <h5>
                <i class="fas fa-table me-2"></i>
                Danh sách lịch sử (@Model.Count)
            </h5>
        </div>
        <div class="tm-card-body tm-card-body-table">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="tm-table table">
                        <thead>
                            <tr>
                                <th><i class="far fa-clock me-1"></i> Thời gian</th>
                                <th><i class="fas fa-user me-1"></i> Người dùng</th>
                                <th><i class="fas fa-network-wired me-1"></i> IP Address</th>
                                <th><i class="fas fa-browser me-1"></i> Trình duyệt</th>
                                <th><i class="fas fa-mobile-alt me-1"></i> Thiết bị</th>
                                <th><i class="fas fa-check-circle me-1"></i> Trạng thái</th>
                                <th><i class="fas fa-stopwatch me-1"></i> Thời gian sử dụng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var login in Model)
                            {
                                <tr class="@(login.IsSuccess == false ? "tm-login-row-failed" : "")">
                                    <td>
                                        <div class="tm-login-timestamp">
                                            <i class="far fa-calendar-check"></i>
                                            <div>
                                                <div class="fw-bold text-dark">@login.LoginTime?.ToString("dd/MM/yyyy")</div>
                                                <small class="tm-text-muted">@login.LoginTime?.ToString("HH:mm:ss")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (login.User != null)
                                        {
                                            <div class="tm-login-user-info">
                                                <div class="tm-login-avatar">
                                                    @if (!string.IsNullOrEmpty(login.User?.Avatar))
                                                    {
                                                        <img src="@login.User.Avatar" alt="@login.User?.FullName"
                                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                                        <span style="display:none;">@login.User?.FullName?.Substring(0, 1)</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@login.User?.FullName?.Substring(0, 1)</span>
                                                    }
                                                </div>
                                                <div>
                                                    <div class="tm-login-user-name">@login.User?.FullName</div>
                                                    <small class="tm-text-muted">@@@login.Username</small>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="tm-login-user-invalid">
                                                <i class="fas fa-user-slash me-1"></i>
                                                <div>
                                                    <div class="text-danger fw-semibold">@login.Username</div>
                                                    <small class="text-muted">Không tồn tại</small>
                                                </div>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <span class="tm-login-ip-badge">
                                            <i class="fas fa-globe me-1"></i>
                                            @login.Ipaddress
                                        </span>
                                    </td>
                                    <td>
                                        <span class="tm-login-browser-badge">
                                            <i class="fab fa-@(login.Browser?.ToLower() == "chrome" ? "chrome" : login.Browser?.ToLower() == "firefox" ? "firefox" : login.Browser?.ToLower() == "safari" ? "safari" : login.Browser?.ToLower() == "edge" ? "edge" : "question")"></i>
                                            @(login.Browser ?? "Unknown")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="tm-login-device-badge tm-login-device-badge--@(login.Device?.ToLower() ?? "unknown")">
                                            <i class="fas fa-@(login.Device == "Mobile" ? "mobile-alt" : login.Device == "Tablet" ? "tablet-alt" : "desktop")"></i>
                                            @(login.Device ?? "Unknown")
                                        </span>
                                    </td>
                                    <td>
                                        @if (login.IsSuccess == true)
                                        {
                                            <span class="tm-badge tm-badge-success">
                                                <i class="fas fa-check-circle me-1"></i> Thành công
                                            </span>
                                        }
                                        else
                                        {
                                            <div class="tm-login-status-failed">
                                                <span class="tm-badge tm-badge-danger mb-1">
                                                    <i class="fas fa-times-circle me-1"></i> Thất bại
                                                </span>
                                                @if (!string.IsNullOrEmpty(login.FailReason))
                                                {
                                                    <div class="tm-login-fail-reason">
                                                        <i class="fas fa-exclamation-circle me-1"></i>
                                                        <small>@login.FailReason</small>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (login.LogoutTime.HasValue && login.LoginTime.HasValue)
                                        {
                                            var duration = login.LogoutTime.Value - login.LoginTime.Value;
                                            <span class="tm-login-duration-badge">
                                                <i class="fas fa-hourglass-half me-1"></i>
                                                @duration.Hours giờ @duration.Minutes phút
                                            </span>
                                        }
                                        else if (login.IsSuccess == true)
                                        {
                                            <span class="tm-badge tm-badge-warning">
                                                <i class="fas fa-spinner fa-pulse me-1"></i> Đang hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="tm-text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="tm-empty-state">
                    <i class="fas fa-history fa-5x"></i>
                    <h4 class="mt-3">Không có dữ liệu</h4>
                    <p class="tm-text-muted">Không tìm thấy lịch sử đăng nhập nào phù hợp với bộ lọc</p>
                </div>
            }
        </div>
    </div>
</div>