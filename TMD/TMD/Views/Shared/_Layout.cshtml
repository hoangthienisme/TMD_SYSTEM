@inject TMD.Models.TmdContext _dbContext
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TMD Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="~/css/layout.css" rel="stylesheet" />

    <style>
        /* NOTIFICATION STYLES FOR ADMIN */
        .notification-wrapper {
            position: relative;
            margin-right: 20px;
            cursor: pointer;
        }

        .notification-icon {
            font-size: 1.5rem;
            color: #555;
            transition: 0.3s;
        }

            .notification-icon:hover {
                color: #667eea;
                transform: scale(1.1);
            }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: #dc3545;
            color: white;
            font-size: 0.7rem;
            font-weight: bold;
            padding: 2px 6px;
            border-radius: 50%;
            border: 2px solid white;
            display: none;
        }

        .notif-dropdown-menu {
            width: 350px;
            max-height: 450px;
            overflow-y: auto;
            padding: 0;
            border: none;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            border-radius: 10px;
        }

        .notif-header {
            background: #667eea;
            color: white;
            padding: 15px;
            font-weight: bold;
            border-radius: 10px 10px 0 0;
        }

        .notif-item {
            padding: 12px 15px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: 0.2s;
            text-decoration: none;
            display: block;
        }

            .notif-item:hover {
                background: #f8f9fa;
            }

            .notif-item.unread {
                background: #eef2ff;
                border-left: 3px solid #667eea;
            }

            .notif-item.read {
                background: #fff;
                opacity: 0.7;
            }

        .notif-content h6 {
            font-size: 0.9rem;
            margin-bottom: 4px;
            font-weight: 600;
            color: #2c3e50;
        }

        .notif-content p {
            font-size: 0.8rem;
            color: #666;
            margin-bottom: 4px;
            line-height: 1.4;
        }

        .notif-time {
            font-size: 0.7rem;
            color: #999;
        }

        .notif-clear-all {
            padding: 10px;
            text-align: center;
            border-top: 1px solid #f0f0f0;
            background: #f8f9fa;
        }

            .notif-clear-all button {
                font-size: 0.8rem;
                color: #666;
                background: none;
                border: none;
                cursor: pointer;
            }

                .notif-clear-all button:hover {
                    color: #667eea;
                }

        /* TOAST */
        #admin-toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 99999;
        }

        .admin-toast {
            background: white;
            border-radius: 8px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            padding: 15px;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 15px;
            animation: slideIn 0.4s ease;
            border-left: 5px solid #667eea;
            width: 320px;
        }

        keyframes slideIn {
            from

        {
            transform: translateX(100%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }

        }
    </style>

    @{
        var customStyles = "";
        try { customStyles = TMD.Controllers.SettingsController.GetCustomStyles(_dbContext); } catch (Exception ex) { }
    }
    @if (!string.IsNullOrWhiteSpace(customStyles))
    {
        @Html.Raw(customStyles)
    }
</head>
<body>
    <audio id="adminNotifSound" src="~/sounds/notification.wav" preload="auto"></audio>
    <div id="admin-toast-container"></div>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <div class="sidebar" id="sidebar">
        <div class="logo">
            <div class="logo-icon"><i class="fas fa-building"></i></div>
            <h1 class="logo-text">TMD Admin</h1>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link" href="/Admin/Dashboard"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></a>
            <a class="nav-link" href="/Admin/UserList"><i class="fas fa-users"></i><span>Quản lý nhân sự</span></a>
            <a class="nav-link" href="/Admin/DepartmentList"><i class="fas fa-building"></i><span>Quản lý phòng ban</span></a>
            <a class="nav-link" href="/Admin/TaskList"><i class="fas fa-tasks"></i><span>Quản lý công việc</span></a>
            <a class="nav-link" href="/Admin/AttendanceHistory"><i class="fas fa-clock"></i><span>Check-in/Check-out</span></a>
            <a class="nav-link" href="/Admin/PendingRequests">
                <i class="fas fa-clipboard-check"></i><span>Duyệt Đề Xuất</span>
                @{
                    try
                    {
                        var pendingCount = _dbContext.OvertimeRequests.Count(r => r.Status == "Pending") + _dbContext.LeaveRequests.Count(r => r.Status == "Pending") + _dbContext.LateRequests.Count(r => r.Status == "Pending");
                        if (pendingCount > 0)
                        {
                            <span class="badge">@pendingCount</span>
                        }
                    }
                    catch { }
                }
            </a>
            <a class="nav-link" href="/Admin/AuditLogs"><i class="fas fa-history"></i><span>Audit Logs</span></a>
            <a class="nav-link" href="/Admin/LoginHistory"><i class="fas fa-sign-in-alt"></i><span>Lịch sử đăng nhập</span></a>
            <a class="nav-link" href="/Admin/PasswordResetHistory"><i class="fas fa-key"></i><span>Lịch sử đổi mật khẩu</span></a>
            <a href="/Settings/Index" class="nav-link"><i class="fas fa-cog"></i><span>Cấu Hình</span></a>
            <a href="/Salary/Index" class="nav-link"><i class="fas fa-money-bill"></i><span>Bảng Lương</span></a>
        </nav>
    </div>

    <div class="main-content">
        <div class="topbar">
            <div class="d-flex align-items-center gap-3">
                <button class="menu-toggle" id="menuToggle"><i class="fas fa-bars"></i></button>
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>
            <div class="user-info d-flex align-items-center">
                <div class="dropdown">
                    <div class="notification-wrapper" id="adminNotifDropdown" data-bs-toggle="dropdown">
                        <i class="fas fa-bell notification-icon"></i>
                        <span class="notification-badge" id="adminNotifBadge">0</span>
                    </div>
                    <div class="dropdown-menu dropdown-menu-end notif-dropdown-menu" aria-labelledby="adminNotifDropdown">
                        <div class="notif-header">
                            <i class="fas fa-bell me-2"></i> Thông báo hệ thống
                        </div>
                        <div id="adminNotifList">
                            <div class="p-4 text-center text-muted">Không có thông báo mới</div>
                        </div>
                        <div class="notif-clear-all">
                            <button onclick="clearAllNotifications()">
                                <i class="fas fa-check-double me-1"></i> Đánh dấu đã đọc tất cả
                            </button>
                        </div>
                    </div>
                </div>

                <img src="@Context.Session.GetString("Avatar")" alt="Avatar" class="user-avatar" />
                <div class="dropdown">
                    <a class="dropdown-toggle d-flex align-items-center" href="#" id="adminDropdown" data-bs-toggle="dropdown">
                        <div>
                            <div class="fw-bold">@Context.Session.GetString("FullName")</div>
                            <small class="text-muted">@Context.Session.GetString("RoleName")</small>
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Staff/Profile"><i class="fas fa-user"></i><span>Thông tin cá nhân</span></a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="fas fa-sign-out-alt"></i><span>Đăng xuất</span></a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="content-wrapper">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show"><i class="fas fa-check-circle"></i><span>@TempData["Success"]</span><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show"><i class="fas fa-exclamation-circle"></i><span>@TempData["Error"]</span><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
            }
            @RenderBody()
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @{
        var customScripts = "";
        try { customScripts = TMD.Controllers.SettingsController.GetCustomScripts(_dbContext); } catch { }
    }
    @if (!string.IsNullOrWhiteSpace(customScripts))
    {
        @Html.Raw(customScripts)
    }

    <script>
        // Layout Scripts
        const currentPath = window.location.pathname.toLowerCase();
        document.querySelectorAll('.sidebar .nav-link').forEach(item => {
            if (item.getAttribute('href') && item.getAttribute('href').toLowerCase() === currentPath) item.classList.add('active');
        });
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        if (menuToggle) menuToggle.addEventListener('click', () => { sidebar.classList.toggle('show'); sidebarOverlay.classList.toggle('show'); });
        if (sidebarOverlay) sidebarOverlay.addEventListener('click', () => { sidebar.classList.remove('show'); sidebarOverlay.classList.remove('show'); });

        // Auto Refresh Pending Count
        setInterval(function() {
            const pendingLink = document.querySelector('a[href="/Admin/PendingRequests"]');
            if (pendingLink && window.location.pathname !== '/Admin/PendingRequests') {
                fetch('/Admin/GetPendingCount').then(r => r.json()).then(data => {
                    const badge = pendingLink.querySelector('.badge');
                    if (data.count > 0) {
                        if (badge) badge.textContent = data.count;
                        else {
                            const newBadge = document.createElement('span'); newBadge.className = 'badge'; newBadge.textContent = data.count;
                            pendingLink.appendChild(newBadge);
                        }
                    } else if (badge) badge.remove();
                }).catch(e => console.error(e));
            }
        }, 30000);

        // --- ✅ ADMIN SIGNALR NOTIFICATION LOGIC ---
        var connection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();
        var adminNotifications = []; // Lưu trữ thông báo

        connection.on("ReceiveMessage", function (title, message, type, link) {
            // 1. Sound
            var audio = document.getElementById("adminNotifSound");
            if(audio) audio.play().catch(e => console.log("Cần tương tác"));

            // 2. Toast
            showAdminToast(title, message, type);

            // 3. Lưu thông báo
            var notif = {
                id: Date.now(),
                title: title,
                message: message,
                type: type,
                link: link || null,
                time: new Date(),
                read: false
            };
            adminNotifications.unshift(notif);

            // 4. Cập nhật badge
            updateNotifBadge();

            // 5. Render list
            renderNotifList();
        });

        connection.start().catch(err => console.error(err.toString()));

        function updateNotifBadge() {
            var unreadCount = adminNotifications.filter(n => !n.read).length;
            var badge = document.getElementById("adminNotifBadge");
            if (unreadCount > 0) {
                badge.innerText = unreadCount > 99 ? '99+' : unreadCount;
                badge.style.display = "block";
            } else {
                badge.style.display = "none";
            }
        }

        function renderNotifList() {
            var list = document.getElementById("adminNotifList");
            if (adminNotifications.length === 0) {
                list.innerHTML = '<div class="p-4 text-center text-muted">Không có thông báo mới</div>';
                return;
            }

            var html = '';
            adminNotifications.slice(0, 20).forEach(function(notif) {
                var timeStr = getTimeAgo(notif.time);
                var readClass = notif.read ? 'read' : 'unread';
                var linkAttr = notif.link ? `onclick="handleNotifClick(${notif.id}, '${notif.link}')"` : `onclick="markAsRead(${notif.id})"`;

                html += `
                    <div class="notif-item ${readClass}" ${linkAttr}>
                        <div class="notif-content">
                            <h6>${notif.title}</h6>
                            <p>${notif.message}</p>
                            <div class="notif-time">${timeStr}</div>
                        </div>
                    </div>`;
            });

            list.innerHTML = html;
        }

        function handleNotifClick(id, link) {
            markAsRead(id);
            if (link) {
                window.location.href = link;
            }
        }

        function markAsRead(id) {
            var notif = adminNotifications.find(n => n.id === id);
            if (notif && !notif.read) {
                notif.read = true;
                updateNotifBadge();
                renderNotifList();
            }
        }

        function clearAllNotifications() {
            adminNotifications.forEach(n => n.read = true);
            updateNotifBadge();
            renderNotifList();
        }

        function getTimeAgo(date) {
            var seconds = Math.floor((new Date() - date) / 1000);
            if (seconds < 60) return 'Vừa xong';
            var minutes = Math.floor(seconds / 60);
            if (minutes < 60) return minutes + ' phút trước';
            var hours = Math.floor(minutes / 60);
            if (hours < 24) return hours + ' giờ trước';
            var days = Math.floor(hours / 24);
            return days + ' ngày trước';
        }

        function showAdminToast(title, message, type) {
            var container = document.getElementById("admin-toast-container");
            var color = type === 'success' ? '#10b981' : (type === 'error' ? '#ef4444' : '#667eea');
            var div = document.createElement('div');
            div.className = "admin-toast";
            div.style.borderLeftColor = color;
            div.innerHTML = `
                <div style="flex:1">
                    <div style="font-weight:bold; margin-bottom:4px">${title}</div>
                    <div style="font-size:13px; color:#555">${message}</div>
                </div>
            `;
            container.appendChild(div);
            setTimeout(() => div.remove(), 5000);
        }
    </script>
</body>
</html>