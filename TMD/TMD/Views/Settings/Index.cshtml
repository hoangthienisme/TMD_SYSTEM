                        data.data.forEach(item => {
                            tbody.append(`
                                <tr>
                                    <td><code>${item.settingKey}</code></td>
                                    <td>${item.description || '-'}</td>
                                    <td>${item.settingValue || '-'}</td>
                                    <td><span class="badge bg-secondary">${item.category}</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-custom btn-edit" onclick="restoreSetting(${item.settingId})" style="padding: 6px 12px;">
                                            <i class="fas fa-undo"></i> Khôi phục
                                        </button>
                                        <button class="btn btn-sm btn-custom btn-delete" onclick="permanentDelete(${item.settingId})" style="padding: 6px 12px;">
                                            <i class="fas fa-times"></i> Xóa vĩnh viễn
                                        </button>
                                    </td>
                                </tr>
                            `);
                        });
                    }
                    $('#trashModal').modal('show');
                }
            });
        }

        function restoreSetting(id) {
            Swal.fire({
                title: 'Khôi phục?',
                text: 'Cấu hình sẽ được khôi phục!',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Khôi phục',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (!result.isConfirmed) return;

                fetch('/Settings/RestoreSetting', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${id}`
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Đã khôi phục!',
                            timer: 1500
                        }).then(() => location.reload());
                    } else {
                        Swal.fire('Lỗi', data.message, 'error');
                    }
                });
            });
        }

        function permanentDelete(id) {
            Swal.fire({
                title: 'XÓA VĨNH VIỄN?',
                html: '<strong>CẢNH BÁO:</strong> Không thể khôi phục sau khi xóa!',
                icon: 'error',
                showCancelButton: true,
                confirmButtonText: '<i class="fas fa-trash"></i> Xóa vĩnh viễn',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#dc3545'
            }).then((result) => {
                if (!result.isConfirmed) return;

                fetch('/Settings/PermanentDelete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${id}`
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Đã xóa vĩnh viễn!',
                            timer: 1500
                        }).then(() => location.reload());
                    } else {
                        Swal.fire('Lỗi', data.message, 'error');
                    }
                });
            });
        }

        function loadTrashCount() {
            fetch('/Settings/GetTrashList')
            .then(r => r.json())
            .then(data => {
                if (data.success && data.data) {
                    const count = data.data.length;
                    $('#trashCount').text(count);
                }
            })
            .catch(() => console.log('Error loading trash count'));
        }
    </script>

