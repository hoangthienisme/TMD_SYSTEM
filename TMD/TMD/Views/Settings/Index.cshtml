@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let modifiedSettings = new Set();
        let originalValues = {};

        $(document).ready(function() {
            initializeInputs();
            loadTrashCount();
            initializeSearch();
            initializeApplyMethodToggle();
        });

        function initializeInputs() {
            $('[data-key]').each(function() {
                const key = $(this).data('key');
                originalValues[key] = $(this).val();
            });

            $('[data-key]').on('change input', function() {
                const key = $(this).data('key');
                const newValue = $(this).val();

                if (newValue !== originalValues[key]) {
                    modifiedSettings.add(key);
                    $(this).addClass('modified');
                    $(this).closest('.setting-card').addClass('modified');
                } else {
                    modifiedSettings.delete(key);
                    $(this).removeClass('modified');
                    if (modifiedSettings.size === 0) {
                        $(this).closest('.setting-card').removeClass('modified');
                    }
                }
                updateModifiedCount();
            });
        }

        function initializeSearch() {
            $('#searchSalary').on('input', function() {
                const query = $(this).val().toLowerCase();
                filterSettings('#salarySettingsList', query);
            });

            $('#searchAttendance').on('input', function() {
                const query = $(this).val().toLowerCase();
                filterSettings('#attendanceSettingsList', query);
            });
        }

        function filterSettings(container, query) {
            $(container + ' .setting-card').each(function() {
                const key = $(this).data('key').toLowerCase();
                const text = $(this).text().toLowerCase();
                
                if (key.includes(query) || text.includes(query)) {
                    $(this).fadeIn();
                } else {
                    $(this).fadeOut();
                }
            });
        }

        function initializeApplyMethodToggle() {
            $('input[name="applyMethod"]').on('change', function() {
                $('.method-option').removeClass('selected');
                $(this).closest('.method-option').addClass('selected');
                
                if ($(this).val() === 'CONDITIONAL') {
                    $('#conditionalDescGroup').slideDown();
                } else {
                    $('#conditionalDescGroup').slideUp();
                }
            });

            $('#createCategory').on('change', function() {
                if ($(this).val() === 'Salary') {
                    $('#applyMethodGroup').slideDown();
                } else {
                    $('#applyMethodGroup').slideUp();
                    $('input[name="applyMethod"]').prop('checked', false);
                    $('.method-option').removeClass('selected');
                }
            });
        }

        function updateModifiedCount() {
            const count = modifiedSettings.size;
            $('#modifiedCount').text(count);
            
            if (count > 0) {
                $('#saveIndicator').fadeIn();
                $('#btnSaveAll').removeClass('btn-save-all').addClass('btn-custom').css({
                    'background': 'var(--warning)',
                    'animation': 'pulse 2s infinite'
                });
            } else {
                $('#saveIndicator').fadeOut();
                $('#btnSaveAll').removeClass('btn-custom').addClass('btn-save-all').css({
                    'background': 'var(--success)',
                    'animation': 'none'
                });
            }
        }

        $('#btnSaveAll').click(function() {
            if (modifiedSettings.size === 0) {
                Swal.fire({
                    icon: 'info',
                    title: 'Không có thay đổi',
                    text: 'Bạn chưa thay đổi cấu hình nào!',
                    timer: 1500
                });
                return;
            }

            const settings = [];
            modifiedSettings.forEach(key => {
                const element = $(`[data-key="${key}"]`);
                settings.push({
                    SettingKey: key,
                    SettingValue: element.val()
                });
            });

            Swal.fire({
                title: 'Xác nhận lưu',
                html: `Lưu <strong>${settings.length}</strong> cấu hình đã thay đổi?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: '<i class="fas fa-save"></i> Lưu',
                cancelButtonText: 'Hủy',
                confirmButtonColor: 'var(--success)'
            }).then((result) => {
                if (result.isConfirmed) {
                    saveSettings(settings);
                }
            });
        });

        function saveSettings(settings) {
            Swal.fire({
                title: 'Đang lưu...',
                html: 'Vui lòng đợi trong giây lát',
                allowOutsideClick: false,
                didOpen: () => Swal.showLoading()
            });

            fetch('/Settings/BatchUpdateSettings', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(settings)
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: data.message,
                        timer: 1500
                    }).then(() => location.reload());
                } else {
                    Swal.fire('Lỗi', data.message, 'error');
                }
            })
            .catch(() => Swal.fire('Lỗi', 'Không thể kết nối server!', 'error'));
        }

        function autoGenerateKey() {
            const description = $('#createDescription').val();
            if (!description) {
                $('#keyStatus').html('');
                return;
            }

            const category = $('#createCategory').val();
            const applyMethod = $('input[name="applyMethod"]:checked').val();

            fetch('/Settings/GenerateKey', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    description: description,
                    applyMethod: applyMethod
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    $('#createKey').val(data.key);
                    if (data.exists) {
                        $('#keyStatus').html('<i class="fas fa-exclamation-triangle text-warning"></i> Key này đã tồn tại!');
                    } else {
                        $('#keyStatus').html('<i class="fas fa-check-circle text-success"></i> Key sẵn sàng');
                    }
                }
            });
        }

        function openCreateModal(category = 'Salary') {
            $('#createForm')[0].reset();
            $('#createCategoryHidden').val(category);
            $('#createCategory').val(category);
            $('#keyStatus').html('');
            $('.method-option').removeClass('selected');
            $('input[name="applyMethod"]').prop('checked', false);
            $('#conditionalDescGroup').hide();
            
            if (category === 'Salary') {
                $('#applyMethodGroup').show();
            } else {
                $('#applyMethodGroup').hide();
            }
            
            $('#createModal').modal('show');
        }

        function createSetting() {
            const key = $('#createKey').val();
            const value = $('#createValue').val();
            const description = $('#createDescription').val();
            const dataType = $('#createDataType').val();
            const category = $('#createCategory').val();
            const applyMethod = $('input[name="applyMethod"]:checked').val() || null;

            if (!key || !value || !description) {
                Swal.fire('Lỗi', 'Vui lòng điền đầy đủ thông tin!', 'error');
                return;
            }

            Swal.fire({
                title: 'Xác nhận tạo?',
                html: `<strong>${description}</strong><br><code>${key}</code>`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Tạo',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Đang tạo...',
                        allowOutsideClick: false,
                        didOpen: () => Swal.showLoading()
                    });

                    fetch('/Settings/CreateSetting', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            SettingKey: key,
                            SettingValue: value,
                            Description: description,
                            DataType: dataType,
                            Category: category,
                            ApplyMethod: applyMethod
                        })
                    })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công!',
                                timer: 1500
                            }).then(() => location.reload());
                        } else {
                            Swal.fire('Lỗi', data.message, 'error');
                        }
                    });
                }
            });
        }

        function toggleSettingStatus(settingId, settingKey) {
